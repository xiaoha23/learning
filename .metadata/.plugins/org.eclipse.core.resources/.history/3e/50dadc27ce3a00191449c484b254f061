package com.xiaonan.learning.microserivce.movieinfoservice.resources;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.xiaonan.learning.microserivce.movieinfoservice.models.Movie;

@RestController
@RequestMapping("/movices")
public class MovieResource {

	@RequestMapping("/{movieId}")
	public Movie getMovieInfo(@PathVariable("moviceId")String movieId) {
		return new Movie(movieId, "name");
	}
	
}
